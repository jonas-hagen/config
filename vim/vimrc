set nocompatible
filetype off

set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

Plugin 'VundleVim/Vundle.vim'
Plugin 'ctrlpvim/ctrlp.vim'              " fasd-like file editing
Plugin 'davidhalter/jedi-vim'
Plugin 'editorconfig/editorconfig-vim'
Plugin 'scrooloose/nerdtree'             " file browser for vim
Plugin 'scrooloose/nerdcommenter'        " comment plugin
Plugin 'shime/vim-livedown'              " live markdown preview
Plugin 'tpope/vim-fugitive'
call vundle#end()
filetype plugin indent on
set backspace=eol,start,indent
set encoding=utf8
set ffs=unix,dos,mac
set hlsearch
set incsearch
set lazyredraw
set laststatus=2
set magic
set mat=2
set mouse=r
set noerrorbells
set novisualbell
set noswapfile
set nowritebackup
set number
set ruler
set showmatch
set smartindent
set splitbelow
set splitright
set ttimeoutlen=50
set whichwrap+=<,>,h,l
set wildignore+=*/bin/*
set wildignore+=*/include/*
set wildignore+=*/lib/*,*/lib64/*
set wildignore+=*/media/*
set wildignore+=*/man/*
set wildignore+=*/share/*
set wildignore+=*.pyo,*.pyc,*/__pycache__/*
set wildignore+=*.sqlite3
set wildmenu
set wildmode=longest:full
set wrap
vnoremap <silent> * :call VisualSelection('f')<CR>
vnoremap <silent> # :call VisualSelection('b')<CR>
let g:ctrlp_follow_symlinks = 1
let g:jedi#completions_enabled=1
let g:jedi#popup_on_dot=0
let g:jedi#show_call_signatures=2
let g:NERDTreeIgnore=['__pycache__']
